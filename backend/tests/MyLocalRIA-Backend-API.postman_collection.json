{
  "info": {
    "name": "MyLocalRIA Backend API",
    "description": "Collection for testing the MyLocalRIA backend API with Firebase authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "firebaseIdToken",
      "value": "YOUR_FIREBASE_ID_TOKEN_HERE",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{firebaseIdToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health Check (No Auth)",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Authentication Tests",
      "item": [
        {
          "name": "Test Endpoint Without Auth (Should Fail)",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/adv_part_2a_data/123456",
              "host": ["{{baseUrl}}"],
              "path": ["adv_part_2a_data", "123456"]
            }
          },
          "response": []
        },
        {
          "name": "Test Endpoint With Invalid Token (Should Fail)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "invalid-token-12345",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/adv_part_2a_data/123456",
              "host": ["{{baseUrl}}"],
              "path": ["adv_part_2a_data", "123456"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "ADV Part 2A - POST",
      "item": [
        {
          "name": "Upsert ADV Part 2A - Valid Data",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"crd_number\": \"123456\",\n  \"rep_name\": \"John Doe\",\n  \"data\": {\n    \"firm_name\": \"Doe Financial Advisors\",\n    \"aum\": 50000000,\n    \"year_founded\": 2010,\n    \"services\": [\"Investment Advisory\", \"Financial Planning\"]\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/upsert_adv_part_2_data",
              "host": ["{{baseUrl}}"],
              "path": ["upsert_adv_part_2_data"]
            }
          },
          "response": []
        },
        {
          "name": "Upsert ADV Part 2A - Missing CRD Number",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rep_name\": \"John Doe\",\n  \"data\": {\n    \"firm_name\": \"Doe Financial Advisors\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/upsert_adv_part_2_data",
              "host": ["{{baseUrl}}"],
              "path": ["upsert_adv_part_2_data"]
            }
          },
          "response": []
        },
        {
          "name": "Upsert ADV Part 2A - Invalid CRD Number",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"crd_number\": \"not-a-number\",\n  \"rep_name\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/upsert_adv_part_2_data",
              "host": ["{{baseUrl}}"],
              "path": ["upsert_adv_part_2_data"]
            }
          },
          "response": []
        },
        {
          "name": "Upsert ADV Part 2A - Missing Rep Name",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"crd_number\": \"123456\",\n  \"data\": {\n    \"firm_name\": \"Doe Financial Advisors\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/upsert_adv_part_2_data",
              "host": ["{{baseUrl}}"],
              "path": ["upsert_adv_part_2_data"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "ADV Part 2B - POST",
