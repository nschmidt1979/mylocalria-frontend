            "body": {
              "mode": "raw",
              "raw": "{\n  \"crd_number\": \"\",\n  \"rep_name\": \"\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/upsert_adv_part_2b_data",
              "host": ["{{baseUrl}}"],
              "path": ["upsert_adv_part_2b_data"]
            }
          },
          "response": []
        }
      ]
    },
