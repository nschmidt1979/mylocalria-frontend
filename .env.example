# MyLocalRIA Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =====================================
# Firebase Configuration
# =====================================
# Get these values from Firebase Console > Project Settings > General > Your apps > SDK setup and configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=riainsights-adv-data
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# =====================================
# Application Configuration
# =====================================
# Application environment (development, staging, production)
VITE_APP_ENV=development

# Application name and version
VITE_APP_NAME=MyLocalRIA
VITE_APP_VERSION=1.0.0

# Base URL for the application
VITE_APP_BASE_URL=http://localhost:3000

# =====================================
# Feature Flags
# =====================================
# Enable performance monitoring in production
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Enable error reporting
VITE_ENABLE_ERROR_REPORTING=true

# Enable analytics
VITE_ENABLE_ANALYTICS=false

# Enable debug mode
VITE_DEBUG_MODE=true

# =====================================
# External Services
# =====================================
# Mapbox token for location services (optional)
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Google Analytics ID (optional)
VITE_GA_MEASUREMENT_ID=your_ga_id_here

# Sentry DSN for error reporting (optional)
VITE_SENTRY_DSN=your_sentry_dsn_here

# =====================================
# API Configuration
# =====================================
# Rate limiting settings
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=3600

# Request timeout in milliseconds
VITE_API_TIMEOUT=10000

# =====================================
# Cache Configuration
# =====================================
# Cache TTL in seconds
VITE_CACHE_TTL=300

# Enable service worker caching
VITE_ENABLE_SW_CACHE=true

# =====================================
# Security Configuration
# =====================================
# Content Security Policy configuration
VITE_CSP_REPORT_URI=https://your-domain.com/csp-report

# Enable strict security headers
VITE_ENABLE_STRICT_SECURITY=true

# =====================================
# Development Configuration
# =====================================
# Emulator settings for local development
VITE_USE_FIREBASE_EMULATORS=false
VITE_FIRESTORE_EMULATOR_HOST=localhost:8080
VITE_AUTH_EMULATOR_HOST=localhost:9099
VITE_STORAGE_EMULATOR_HOST=localhost:9199

# Mock data for development
VITE_USE_MOCK_DATA=false

# =====================================
# Testing Configuration
# =====================================
# Test database configuration
VITE_TEST_PROJECT_ID=mylocalria-test

# Enable test mode features
VITE_TEST_MODE=false

# =====================================
# Build Configuration
# =====================================
# Build optimization settings
VITE_ENABLE_BUNDLE_ANALYZER=false
VITE_ENABLE_SOURCE_MAPS=true

# PWA settings
VITE_ENABLE_PWA=true
VITE_PWA_SW_SCOPE=/

# =====================================
# Monitoring & Logging
# =====================================
# Log level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# Enable console logging in production
VITE_ENABLE_CONSOLE_LOGS=false

# Performance monitoring sample rate (0.0 - 1.0)
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# =====================================
# CI/CD Configuration
# These are typically set in GitHub Secrets, not in .env files
# =====================================
# Firebase token for deployment (DO NOT PUT IN .env FILES)
# FIREBASE_TOKEN=your_firebase_ci_token

# GitHub token for releases (DO NOT PUT IN .env FILES)  
# GITHUB_TOKEN=your_github_token

# Deployment configuration
# DEPLOYMENT_ENVIRONMENT=production
# SLACK_WEBHOOK_URL=your_slack_webhook_for_notifications

# =====================================
# Additional Configuration
# =====================================
# Custom domain configuration
# VITE_CUSTOM_DOMAIN=mylocalria.com

# CDN configuration
# VITE_CDN_URL=https://cdn.mylocalria.com

# Email service configuration
# VITE_EMAIL_SERVICE_ID=your_email_service_id

# Social media links
# VITE_SOCIAL_TWITTER=https://twitter.com/mylocalria
# VITE_SOCIAL_LINKEDIN=https://linkedin.com/company/mylocalria